    # Environment variables for Vite (must start with VITE_)
    # This URL points to the backend service within the Docker network
    # or localhost if running backend outside Docker during frontend dev.
    VITE_API_BASE_URL=http://localhost:8000/api

    # If using Docker Compose, you might set this in docker-compose.yml instead,
    # pointing to the backend service name:
    # VITE_API_BASE_URL=http://backend:8000/api
